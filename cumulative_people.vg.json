{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 400,
  "data": {"url": "cumulated.csv"},
  "view": {"stroke": null},
  "background": "black",

  "params": [
    {
      "name": "PeopleAbove",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 10,
        "step": 1,
        "name": "Minimum People Who Have been to Space: "
      }
    }
  ],

  "transform": [
    {"filter": "datum.Total_People >= PeopleAbove"}  ],

  "layer": [
    {
      "mark": {"type": "bar", "cornerRadiusEnd": 4},
      "encoding": {
        "x": {
          "field": "Entity",
          "type": "nominal",
          "sort": "-y",
          "axis": {
            "labelFontSize": 12,
            "titleFontSize": 18,
            "titlePadding": -5,
            "labelAngle": -90,
            "labelColor": "white"
          }
        },
        "y": {
          "field": "Total_People",
          "type": "quantitative",
          "title": null,
          "scale": {"type": "sqrt"},
          "axis":{
            "labelColor": "white"
          }
        },
        "color": {
          "field": "Total_People",
          "type": "quantitative",
          "title": "Total People",
          "scale": {"type": "sqrt", "scheme": "reds"},
          "legend": {
            "title": "People in Space",
            "orient": "right",
            "direction": "vertical",
            "titleColor": "white",
            "labelColor": "white",
            "titleFontSize": 15,
            "labelFontSize": 13
          }
        },
        "tooltip": [
          {"field": "Entity", "type": "nominal", "title": "Country"},
          {"field": "Total_People", "type": "quantitative", "title": "Total People"}
        ]
      }
    },

    {
      "data": {
        "values": [
          {"Entity": "United States", "Total_People": 397, "note": "Largest"}
        ]
      },
      "mark": {"type": "text", "align": "center", "dy": 15, "fontSize": 11, "fontWeight": "bold", "color": "limegreen"},
      "encoding": {
        "x": {"field": "Entity", "type": "nominal"},
        "y": {"field": "Total_People", "type": "quantitative"},
        "text": {"field": "note"}
      }
    },

    {
      "data": {
        "values": [
          {"Entity": "Russia", "Total_People": 124, "note": "Second largest"}
        ]
      },
      "mark": {"type": "text", "align": "center", "dy": -8, "fontSize": 11, "fontWeight": "bold", "color": "lightblue"},
      "encoding": {
        "x": {"field": "Entity", "type": "nominal"},
        "y": {"field": "Total_People", "type": "quantitative"},
        "text": {"field": "note"}
      }
    }
  ]
}
